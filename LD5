#include <stdio.h>
#include <string.h>
#define N 20

void kartoshana(char tx[])
{
    int i, j;
    char temp;
    for(i=0 ; i<strlen(tx)-1 ; i++)
    for(j=i+1 ; j<strlen(tx) ; j++)
    if(tx[i] > tx[j])
    {
        temp = tx[i];
        tx[i] = tx[j];
        tx[j] = temp;
    }
    printf("Rinda alfabēta secībā:\t\t ");
    for(i=0 ; i<strlen(tx)-1 ; i++)
    printf("%c, ",tx[i]);
    printf("%c\n", tx[strlen(tx)-1]);

    printf("Atbilstošie ASCII skaitļi:\t\t\t ");
    for(i=0 ; i<strlen(tx)-1 ; i++)
    printf("%hhd, ",tx[i]);
    printf("%hhd\n", tx[strlen(tx)-1]);
}
int main()
{
    char txt[N];
    
    printf("Ievadi teksta rindu: ");
    scanf("%s", txt);

    int i, j, sum, vid, med, g=strlen(txt);

    kartosana(txt);

    for(i=0 ; i<g ; i++)//videja
    sum += txt[i];
    vid = sum/g;

    printf("\Min vērtība simbolu rindā(pēc ASCII):\t\t\tsimbols - %c\tskaitlis - %d\n", txt[0], txt[0]);
    printf("MAx vērtība simbolu rindā(pēc ASCII):\t\t\tsimbols - %c\tskaitlis - %d\n", txt[g-1], txt[g-1]);
    printf("Average vērtība simbolu rindā(pēc ASCII):\tsimbols - %c\tskaitlis - %d\n", vid, vid);
    
    if(g%2 == 1)//mediana
    {
        med = g/2;
        printf("Mediāna simbolu rindai(pēc ASCII):\t\tsimbols - %c\tskaitlis - %d\n", txt[med], txt[med]);
    }
    if(g%2 == 0)
    {
        med = (txt[g/2-1] + txt[g/2])/2;
        printf("Mediāna simbolu rindai(pēc ASCII):\t\tsimbols - %c\tskatlis - %d\n", med, med);
    }

    sum=1;//moda
    int moda[g];

    for(i=0 ; i<g ; i++)
    {
        for(j=i+1 ; j<=g ; j++)
        if(txt[i]==txt[j]) sum += 1;
        moda[i] = sum;
        sum=1;
    }

    int temp;
    char temp2;

    for(i=0 ; i<g-1 ; i++)
    for(j=i+1 ; j<g ; j++)
    if(moda[i] > moda[j])
    {
        temp = moda[i];
        moda[i] = moda[j];
        moda[j] = temp;
        temp2 = txt[i];
        txt[i] = txt[j];
        txt[j] = temp2;
    }

    printf("Modas vērtība simbolu rindā(pēc ASCII):\t\t\tsimbols - %c\tskaitlis - %d\n", txt[g-1], txt[g-1]);

    for(i=2 ; i<=g ; i++)
    if(moda[g-1]==moda[g-i])
    {
        printf("Otra modas vērtība jūsu simbolu rindā(pēc ASCII):\t\tsimbols - %c\tskaitlis - %d\n", txt[g-i], txt[g-i]);
    }
    printf("Modas atkārtojas %d reizes\n", moda[g-1]);

    return 0;
}
