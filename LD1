"Hiperboliskais sinuss"

#include <stdio.h>
#include <math.h>
int main()
{
    long double a499, a500;
    double x, a0, S0, S499, S500;
    int k=0;

    printf("Ievadiet x vērtību: ");
    fflush(stdin);
    scanf("%lf", &x);

    printf("\nSumma: \n\n");
    printf("               500\n");
    printf("              _____\n");
    printf("              %c                2*k+1\n",92);
    printf("               %c              x\n",92);
    printf("sinh(%.2lf) =   >    ___________________________\n", x);
    printf("               /\n");
    printf("              /____             (2*k+1)!\n");
    printf("               k=0\n\n");
    
    printf("Rekurences reizinātājs: \n\n");
    printf("            2\n");
    printf("           x\n");
    printf("  ____________________\n");
    printf(" \n");
    printf("    (2*k) * (2*k+1)\n\n");

    printf("X ir definēts: x∈ R \n\n");

    a0 = pow(x,2*0+1)/(1.);
    S0 = a0;
    printf("a0   = %.2lf\t\tS0   = %.2lf\n", a0,S0);

    a499 = a0;
    S499 = S0;
    while(k<499)
    {
        k++;
        a499 *= pow(2,-2) / ((2*k)*(2*k+1));
        S499 += a499;
    }
    printf("a499 = %Le\tS499 = %lf\n", a499, S499);

    a500 = a499 * (-1) *x*x * pow(2,-2) / ((2*500)*(2*500+1));
    S500 = S499 + a500;
    printf("a500 = %Le\tS500 = %lf\n", a500, S500);

    printf("Funkcijas vērtība pēc Teilora rindas = %lf\n", S500);
    
    double f1 = sin(x/2);
    printf("Funkcijas vērtība, pēc funkcijas izteiksmes = %lf\n", f1);

    return 0;
}
